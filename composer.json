{
    "name": "zain/laravel-doctrine-algolia",
    "type": "library",
    "description": "Algolia integration with Laravel & Doctrine",
    "license": "MIT",
    "authors": [
        {
            "name": "Zain Mehdi",
            "email": "szainmehdi@gmail.com"
        },
        {
            "name": "Algolia",
            "email": "support@algolia.com"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "algolia/algoliasearch-client-php": "^2.5",
        "doctrine/common": "^2.5",
        "symfony/filesystem": "^4.0",
        "symfony/property-access": "^4.0",
        "symfony/serializer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Zain\\LaravelDoctrine\\Algolia\\": "src/"
        }
    },
    "conflict": {
        "doctrine/mongodb-odm": "< 1.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Zain\\LaravelDoctrine\\Algolia\\": "tests/"
        }
    },
    "require-dev": {
        "doctrine/orm": "^2.5",
        "friendsofphp/php-cs-fixer": "^2.15",
        "ocramius/proxy-manager": "*",
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test:install": "composer install -d tests/QualityTools/",
        "test:update": "composer update -d tests/QualityTools/",
        "lint": "php-cs-fixer fix -v",
        "test:types": "tests/QualityTools/vendor/bin/phpstan analyse --ansi",
        "test:unit": "phpunit --colors=always --verbose",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test": [
            "@test:lint",
            "@test:unit"
        ]
    }
}
